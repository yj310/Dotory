                            android:gravity="center"
                            android:background="@drawable/stay_month_table_cell"/>
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:background="@drawable/stay_month_table_cell"/>
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:gravity="center"
