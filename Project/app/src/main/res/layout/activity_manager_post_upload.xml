<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="0.07"
        android:background="@drawable/title_bar_border"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/go_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorMenu"
                android:focusableInTouchMode="true"
                android:scaleType="fitCenter"
                android:src="@drawable/right_arrow" />
        </LinearLayout>


        <TextView
            android:id="@+id/app_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/fontstyle"
            android:gravity="center"
            android:text="게시물 작성하기"
            android:textColor="#000000"
            android:textSize="20dp" />

    </LinearLayout>


    <ScrollView
        android:id="@+id/main_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.84"
        android:background="#ffffff"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorNoticeBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">


            <EditText
                android:id="@+id/input_title"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:hint="제목을 입력하세요"
                android:padding="12dp"
                android:text=""
                android:textColor="#222222"
                android:textSize="20dp" />


            <EditText
                android:id="@+id/input_content"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="내용을 입력하세요"
                android:padding="12dp"
                android:text=""
                android:background="@drawable/input_post"
                android:textColor="#222222"
                android:textSize="17dp" />


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:background="@color/colorNoticeBackground"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/post_add_image_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorMenu"
                android:focusableInTouchMode="true"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_image" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/post_add_file_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorMenu"
                android:focusableInTouchMode="true"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_file" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <Button
            android:id="@+id/post_upload_btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/login_button_border"
            android:layout_gravity="right"
            android:text="게시하기" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>